# Evaluace Filler Configuration
# Copy this file to .env and customize values for your environment

# Browser Configuration
CHROME_DEBUG_PORT=9222
CHROME_USER_DATA_DIR=/tmp/chrome_evaluace
CHROMEDRIVER_PATH=/usr/bin/chromedriver
BROWSER_WINDOW_SIZE=1200,800
BROWSER_HEADLESS=false
BROWSER_TIMEOUT=30

# Survey Configuration (customize for your surveys)
SURVEY_BASE_URL=
SURVEY_ACCESS_CODE=

# Timing Configuration
PAGE_LOAD_TIMEOUT=30
ELEMENT_WAIT_TIMEOUT=10
NAVIGATION_DELAY=3.0
FORM_FILL_DELAY=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/evaluace_filler.log
ENABLE_DEBUG_LOGS=false

# JavaScript Configuration
JS_EXECUTION_TIMEOUT=30
JS_CACHE_ENABLED=true

# Batch Processing Configuration
BATCH_SIZE=50
BATCH_PARALLEL_WORKERS=1
BATCH_RETRY_COUNT=3

# Playback Configuration
PLAYBACK_RANDOM_MATRIX=true
PLAYBACK_ENABLE_SCREENSHOTS=false
PLAYBACK_SCREENSHOT_DIR=screenshots